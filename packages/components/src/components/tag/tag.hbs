<div role="list">
  {{#each tags}}
  <span class="{{@root.prefix}}--tag {{@root.prefix}}--tag--{{type}}" role="listitem">
    <span class="{{@root.prefix}}--tag__label">{{label}}</span>
  </span>
  {{/each}}
</div>

<div role="list">
  {{#if filter}}
  <span class="{{@root.prefix}}--tag {{@root.prefix}}--tag--filter" title="Clear filter" role="listitem">
    filter
    <button aria-label='Clear filter' class="{{@root.prefix}}--tag--filter__close-button">
      {{ carbon-icon 'Close16' }}
    </button>
  </span>
  {{/if}}
</div>
