{
  "include": ["src/**/*", "config/typescript/**/*"],
  "exclude": ["__tests__", "tools"],
  "compilerOptions": {
    "allowJs": true,
    "jsx": "react",
    "outDir": "types",
    "declaration": true,
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "module": "commonjs",
    "incremental": true,
    "skipLibCheck": true
    // "strict": true,
    // "noImplicitAny": true,
    // "noUnusedLocals": true,
  }
}
